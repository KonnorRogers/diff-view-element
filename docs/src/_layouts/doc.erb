---
layout: default
---
<%= render "side_nav" %>

<main id="main" class="documentation-content flow">
  <% title_id = resource.data.title.downcase.split(" ").join("-").gsub(/[\?!]/, "") %>
  <h1 id="<%= title_id %>">
    <a href="<%= "##{title_id}" %>">
      <%= resource.data.title %>
    </a>
  </h1>

  <% if resource.data.description %>
    <%= markdownify(resource.data.description) %>
  <% end %>

  <%= yield %>

  <%= render "pagination" %>
</main>

<%= render "table_of_contents" %>
